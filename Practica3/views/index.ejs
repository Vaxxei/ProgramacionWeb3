<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CRUD</title>
    
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/style.css"> <!-- Archivo CSS personalizado -->
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Gestión de Usuarios</h1>
        <h3 class="text-center mb-4">Brian Rafael Sánchez Yujra</h3>

        <!-- Formulario de Búsqueda -->
        <form action="/search" method="get" class="d-flex justify-content-center mb-4">
            <input type="number" name="id" class="form-control w-25 me-2" placeholder="Buscar por ID" required>
            <button type="submit" class="btn btn-info">Buscar</button>
        </form>

        <!-- Botón para Agregar Nuevo Usuario -->
        <div class="text-end mb-3">
            <a href="/new" class="btn btn-success">+ Nuevo Usuario</a>
        </div>

        <!-- Tabla de Usuarios -->
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Edad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.edad %></td>
                        <td>
                            <a href="/edit/<%= user.id %>" class="btn btn-primary btn-sm">Editar</a>
                            <form action="/delete/<%= user.id %>?_method=DELETE" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Seguro que deseas eliminar?')">Eliminar</button>
                            </form>                            
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
